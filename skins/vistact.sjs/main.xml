<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<!-- 
	
	Hello!
	
	The font used in the images is "Tahoma", Standard, 10pt
	There are also some empty images that can be used as templates 
	for user-defined function in this skin.
	
	Regards,
	Skinner
	
-->

<skin debuginfo="0" debugoutline="0" name="VistAct" about="Version 15.10, skin published by Skinner">

	<!-- default layout -->
	<layout name="default" usew="default" useh="default" usepos="default" minw="800" minh="340">

		<!-- title bar: height: 23px -->
		<include file="titlebar.xml" />
		
		<!-- notebook: height: 38px; -->
		<include file="notebook.xml" />
		
		<!-- az/search: height: 29px -->
		<include file="az.xml" />
		
		<!-- workspace -->
		<div x="8" y="next" w="100%-16" h="100%-159" target="visrect">
			<include file="workspace.xml" />
		</div>
		
		<!-- controls -->
		<div x="0" y="next" w="100%" h="69">
			<include file="control.xml" />
		
			<!-- display with three lines -->
			<img src="display-line.png" x="next+5" y="17" w="2" h="45" />

			<box x="next+5" y="17" w="45%-110" h="15" target="line00" fgcolor="#74819C">
				<color target="selection" fgcolor="#FFFFFF" hicolor="#000000" offsetx="1" offsety="1" />
			</box>
			<box x="same" y="next" w="same" h="same" target="line01" fgcolor="#74819C">
				<color target="selection" fgcolor="#FFFFFF" hicolor="#000000" offsetx="1" offsety="1" />
			</box>
			<box x="same" y="next" w="same" h="same" target="line02" fgcolor="#616E87">
				<color target="selection" fgcolor="#FFFFFF" hicolor="#000000" offsetx="1" offsety="1" />
			</box>
			
			<img src="display-line.png" x="next+5" y="17" w="2" h="45" />
			
			<button x="next+5" y="15" src="display-buttons.png" srcindex="0" target="displayup" />
			<scrollbar x="same" y="next+2" h="25" src="display-scroll.png" target="displayVScroll" />
			<button x="same" y="next+2" src="display-buttons.png" srcindex="1" target="displaydown" />
			
			<if cond="enlargedisplay">
				<button target="layout:large" x="next+5" y="22" src="control-shuffle.png" srcindex="4" tooltip="Enlarge display" />
			</if>
		</div>

	</layout>




	<!-- large layout -->
	<layout name="large" usew="default" useh="default" usepos="default" minw="800" minh="475">
		
		<box x="0" y="100%-135" w="30%+238" h="135" bgcolor="#000000" /> <!-- black out the empty region -->
		
		<!-- title bar: height: 23px -->
		<include file="titlebar.xml" />
		
		<!-- notebook: height: 38px; -->
		<include file="notebook.xml" />
		
		<!-- az/search: height: 29px -->
		<include file="az.xml" />
		
		<!-- workspace - 9 additional lines, 15 px each: workspace is 135px smaller in height -->
		<div x="8" y="next" w="100%-16" h="100%-294" target="visrect">
			<include file="workspace.xml" />
		</div>
		
		<!-- controls -->
		<div x="0" y="next" w="100%" h="204">
			<img src="control-bg-large-ext.png" x="0" y="100%-187" w="30%+294" />	
			<include file="control.xml" />
		
			<!-- display with more lines -->
			<img src="control-bg-large-ext.png" x="next+5" y="100%-187" w="70%-238" />			
			<img src="display-line.png" x="same" y="17" w="2" h="180" />

			<box x="next+5" y="17" w="45%-110" h="15" target="line00" fgcolor="#74819C">
				<color target="selection" fgcolor="#FFFFFF" hicolor="#000000" offsetx="1" offsety="1" />
			</box>
			<box x="same" y="next" w="same" h="same" target="line01" fgcolor="#74819C">
				<color target="selection" fgcolor="#FFFFFF" hicolor="#000000" offsetx="1" offsety="1" />
			</box>
			<box x="same" y="next" w="same" h="same" target="line02" fgcolor="#616E87">
				<color target="selection" fgcolor="#FFFFFF" hicolor="#000000" offsetx="1" offsety="1" />
			</box>
			<box x="same" y="next" w="same" h="same" target="line03" fgcolor="#616E87">
				<color target="selection" fgcolor="#FFFFFF" hicolor="#000000" offsetx="1" offsety="1" />
			</box>
			<box x="same" y="next" w="same" h="same" target="line04" fgcolor="#616E87">
				<color target="selection" fgcolor="#FFFFFF" hicolor="#000000" offsetx="1" offsety="1" />
			</box>
			<box x="same" y="next" w="same" h="same" target="line05" fgcolor="#616E87">
				<color target="selection" fgcolor="#FFFFFF" hicolor="#000000" offsetx="1" offsety="1" />
			</box>
			<box x="same" y="next" w="same" h="same" target="line06" fgcolor="#616E87">
				<color target="selection" fgcolor="#FFFFFF" hicolor="#000000" offsetx="1" offsety="1" />
			</box>
			<box x="same" y="next" w="same" h="same" target="line07" fgcolor="#616E87">
				<color target="selection" fgcolor="#FFFFFF" hicolor="#000000" offsetx="1" offsety="1" />
			</box>
			<box x="same" y="next" w="same" h="same" target="line08" fgcolor="#616E87">
				<color target="selection" fgcolor="#FFFFFF" hicolor="#000000" offsetx="1" offsety="1" />
			</box>
			<box x="same" y="next" w="same" h="same" target="line09" fgcolor="#616E87">
				<color target="selection" fgcolor="#FFFFFF" hicolor="#000000" offsetx="1" offsety="1" />
			</box>
			<box x="same" y="next" w="same" h="same" target="line10" fgcolor="#616E87">
				<color target="selection" fgcolor="#FFFFFF" hicolor="#000000" offsetx="1" offsety="1" />
			</box>
			<box x="same" y="next" w="same" h="same" target="line11" fgcolor="#616E87">
				<color target="selection" fgcolor="#FFFFFF" hicolor="#000000" offsetx="1" offsety="1" />
			</box>
			
			<img src="display-line.png" x="next+5" y="17" w="2" h="180" />
			
			<button x="next+5" y="15" src="display-buttons.png" srcindex="0" target="displayup" />
			<scrollbar x="same" y="next+2" h="160" src="display-scroll.png" target="displayVScroll" />
			<button x="same" y="next+2" src="display-buttons.png" srcindex="1" target="displaydown" />

			<button target="layout:default" x="next+5" y="157" src="control-shuffle.png" srcindex="5" tooltip="Shrink display" />
			
			<button x="same" y="22" src="control-shuffle.png" srcindex="6" target="openfiles" />
			<button x="same" y="next" src="control-shuffle.png" srcindex="7" target="saveplaylist" />
			<button x="same" y="next+1" src="control-shuffle.png" srcindex="8" target="unqueueall" />
			
		</div>
	
	</layout>

</skin>
